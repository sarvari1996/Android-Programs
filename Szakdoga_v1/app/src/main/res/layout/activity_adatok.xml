<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingLeft="75dp"
    android:paddingRight="75dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textaerob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_aerob" />

    <Spinner
        android:id="@+id/spinnerAerob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textsulyzo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_sulyzo" />

    <Spinner
        android:id="@+id/spinnerSulyzo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textnem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_nem" />

    <Spinner
        android:id="@+id/spinnerNem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/viewNem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kor" />

    <EditText
        android:id="@+id/editKor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Kor" />

    <TextView
        android:id="@+id/viewMagassag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Magasság" />

    <EditText
        android:id="@+id/editMagassag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="cm" />

    <TextView
        android:id="@+id/textSuly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Súly" />

    <EditText
        android:id="@+id/editSuly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Súly" />

    <Button
        android:id="@+id/btnMentes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="saveData"
        android:background="@android:drawable/arrow_down_float"
        android:text="Mentés" />

</LinearLayout>